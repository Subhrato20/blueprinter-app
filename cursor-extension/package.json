{
  "name": "blueprint-snap",
  "displayName": "Blueprint Snap",
  "description": "Dev DNA Edition: One-line idea â†’ Plan JSON + style-adapted scaffolds + Ask-Copilot + Cursor deep link",
  "version": "1.0.0",
  "publisher": "subhrato",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "blueprint",
    "development",
    "planning",
    "ai",
    "copilot",
    "scaffolding"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blueprintSnap.validatePayload",
        "title": "Blueprint: Validate Payload",
        "category": "Blueprint Snap"
      },
      {
        "command": "blueprintSnap.ingest",
        "title": "Blueprint: Ingest Plan",
        "category": "Blueprint Snap"
      }
    ],
    "configuration": {
      "title": "Blueprint Snap",
      "properties": {
        "blueprintSnap.secret": {
          "type": "string",
          "default": "CHANGE_ME",
          "description": "HMAC secret for verifying Blueprint Snap payloads"
        },
        "blueprintSnap.autoOpenFiles": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open files after ingesting a plan"
        },
        "blueprintSnap.runTasks": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run tasks after ingesting a plan"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "blueprintSnap.validatePayload"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "crypto": "^1.0.1"
  }
}
